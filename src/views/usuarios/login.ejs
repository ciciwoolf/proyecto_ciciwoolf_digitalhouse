<!doctype html>
<html lang="es">
  <%- include('../partials/head'); %>
  <body>
    <div class="container-fluid">
      <%- include('../partials/navBar'); %>
      <!-- Cuerpo principal -->
      <section class="row">
          <article class="col-12  card pt-5" >
                  <div class="card-body container-fluid">
                    <h2 class="card-title card-title text-white bg-info text-center display-4" style="margin-top: 100px">Iniciar Sesión</h2>
                    <h4 class="card-title text-center display-6 " >Introduzca su correo y contraseña.</h4>

                  </div>
          </article>
      </section>

      <section class="bg-home pt-15">
            <div class="container" style="padding-top:2rem; padding-bottom: 1rem">
                <div class="row">
                    <div class="col-8 mx-auto bg-light pt-2 ">
                        <div class="signup-form">
                            <form action="/login" method="post">
                                <div class="form-group">
                                    <input type="email" class="form-control" name="email" placeholder="Email" value="<%= typeof old != 'undefined' ? old.email : '' %>" >
                                    <% if(typeof(errors) != 'undefined' && errors.email){%>
                                      <span class="text-danger">
                                        <%= errors.email.msg %>
                                      </span>
                                   <%}%>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" name="password" placeholder="Contraseña">
                                    <% if(typeof(errors) != 'undefined' && errors.password){%>
                                      <span class="text-danger">
                                        <%= errors.password.msg %>
                                      </span>
                                   <%}%>

                                </div>
                                <div class="form-group ">
                                  <input type="checkbox" name="recordarme"><label class="checkbox-inline">Recordarme</label>
                                </div>
                                <div class="form-group ">
                                    <button type="submit" class="btn btn btn-info">Ingresar</button>
                                </div>
                            </form>
                            <div class="text-center mb-3"><a href="/registro">Aun no poseo una cuenta</a></div>
                        </div>
                    </div>                        
                </div>
            </div>
      </section>
      <%- include('../partials/footer'); %>
    </div> 
    </body>
</html>