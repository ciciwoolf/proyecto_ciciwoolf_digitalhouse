<!doctype html>
<html lang="es">
  <%- include('../partials/head'); %>
  <body>
    <div class="container-fluid">
      <%- include('../partials/navBar'); %>
      <!-- Cuerpo principal -->
      <section class="row">
          <article class="col-12  card pt-5" >
                  <div class="card-body container-fluid">
                    <h2 class="card-title card-title text-white bg-info text-center display-4" style="margin-top: 100px">iniciá tu sesión</h2>
                    <h4 class="card-title text-center display-6 "> tu correo y contraseña por favor.</h4>
                  </div>
          </article>
      </section>

      <section class="bg-home pt-15">
            <div class="container" style="padding-top:2rem; padding-bottom: 1rem">
                <div class="row"> 
                  
                  <!-- Error Section-->
                    <div class="col-8 mx-auto bg-light pt-2 ">
                         <!--Aquí muestro los errores del lado del Js-Front -->
                         <div>
                          <ul id="errores"> </ul>
                      </div>
                          <!-- Aquí acomode los errores para que se vean mejor y Edu no se Angustie. Abrazos.--->
                          <% if(typeof(errors) != 'undefined'){%>
                              <ul class="alert alert-danger">
                                  <% errores.forEach(error => { %>
                                      <li><%= error.msg%></li>
                                  <%})%>
                              </ul>
                          <%}%>  
                      <div class="signup-form">
                            <form class="formulario" id="formulario" action="/login" method="post">
                                <div class="form-group">
                                    <input type="email" id="email" class="form-control"  name="email" placeholder="Email" value="<%= typeof old != 'undefined' ? old.email : '' %>" >
                                    <% if(typeof(errors) != 'undefined' && errors.email){%>
                                      <span class="text-danger">
                                        <%= errors.email.msg %>
                                      </span>
                                   <%}%>
                                </div>
                                <div class="form-group">
                                    <input type="password" id="password" class="form-control" name="password" placeholder="Contraseña">
                                    <% if(typeof(errors) != 'undefined' && errors.password){%>
                                      <span class="text-danger">
                                        <%= errors.password.msg %>
                                      </span>
                                   <%}%>

                                </div>
                                <div class="form-group ">
                                  <input type="checkbox" name="recordarme"><label class="checkbox-inline">&#160;recordame!</label>
                                </div>
                                <div class="form-group ">
                                    <button type="submit" class="btn btn btn-info" id="buttons">ingresar</button>
                                </div>
                            </form>
                            <div class="text-center mb-3"><a href="/registro">¿no tenés una cuenta? registrate acá</a></div>
                        </div>
                    </div>                        
                </div>
            </div>
      </section>
      <%- include('../partials/footer'); %>
      <script src="/js/login.js"></script>
    </div> 
    </body>
</html>